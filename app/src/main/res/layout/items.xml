<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/product_item"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:adjustViewBounds="true"
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"/>
    <TextView
        android:id="@+id/topDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:text="A/F ESSENTIAL"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="A/F ESSENTIAL"
        android:paddingTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/promoMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11dp"
        android:layout_marginTop="10dp"
        android:text="A/F ESSENTIAL"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        />
    <TextView
            android:id="@+id/bottomDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:clickable="true"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/select_button_a"
        android:layout_width="wrap_content"
        android:background="@drawable/selector"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:paddingLeft="90dp"
        android:layout_marginBottom="30dp"
        />
    <TextView
        android:id="@+id/select_button_b"
        android:layout_width="wrap_content"
        android:background="@drawable/selector"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:paddingLeft="90dp"
        android:layout_marginBottom="30dp"
        />


    </LinearLayout>
</android.support.v7.widget.CardView>





